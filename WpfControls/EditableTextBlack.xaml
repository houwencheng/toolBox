<UserControl x:Class="WpfControls.EditableTextBlack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MouseDoubleClick="UserControl_MouseDoubleClick"
             x:Name="thisControl"
             KeyDown="UserControl_KeyDown">
    <Grid>
        <TextBlock x:Name="textBlock" Visibility="Visible" FontSize="{Binding ElementName=thisControl, Path=FontSize}"/>
        <TextBox x:Name="tb" Visibility="Hidden" FontSize="{Binding ElementName=thisControl, Path=FontSize}"/>
    </Grid>
</UserControl>
