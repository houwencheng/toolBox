<Window x:Class="TimeSpanSet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSpanSet"
        xmlns:Controls="clr-namespace:TimeSpanSet.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <!--<Controls:TimeSpanSet  DataContext="{Binding TimeSpanSetViewModel}" 
                               MaxValue="{Binding MaxValue}"
                               Values="{Binding Values, Mode=TwoWay}"
                               VerticalAlignment="Top" Height="20"/>-->
            <Controls:TimeSpanSet  DataContext="{Binding TimeSpanSetViewModel}" 
                                   MaxValue="{Binding MaxValue}"
                                   UnitValue="{Binding UnitValue}"
                                   UnitLevels="{Binding UnitLevels}"
                                   Values="{Binding Values, Mode=TwoWay}"
                                   Focusable="True"
                                   VerticalAlignment="Top" Height="40"
                                   Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
